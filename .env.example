# ================================================
# JobGuinée - Configuration Développement Local
# ================================================
# Pour la production, voir .env.example.production
# ================================================

# ================================================
# SUPABASE - Base de données et authentification
# ================================================
# Obtenir ces valeurs depuis: https://app.supabase.com/project/_/settings/api

# URL du projet Supabase
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Clé anonyme publique (safe pour le frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ================================================
# APPLICATION - Configuration générale
# ================================================

# Nom de l'application
VITE_APP_NAME=JobGuinée

# URL du site (local)
VITE_APP_URL=http://localhost:5173

# URL de l'API
VITE_API_URL=http://localhost:5173/api

# Environnement
VITE_ENVIRONMENT=development

# ================================================
# FEATURES - Activation des fonctionnalités
# ================================================

# Activer le chatbot IA Alpha
VITE_ENABLE_CHATBOT=true

# Activer les fonctionnalités premium
VITE_ENABLE_PREMIUM=true

# Activer les analytics (désactiver en dev)
VITE_ENABLE_ANALYTICS=false

# Activer le mode debug
VITE_ENABLE_DEBUG=true

# Activer le système de badges
VITE_ENABLE_BADGES=true

# Activer la CVThèque
VITE_ENABLE_CVTHEQUE=true

# Activer les formations
VITE_ENABLE_FORMATIONS=true

# Activer le B2B
VITE_ENABLE_B2B=true

# ================================================
# DÉVELOPPEMENT
# ================================================

# Port du serveur de développement
PORT=5173

# Host
HOST=localhost

# ================================================
# NOTES
# ================================================
# 1. Ce fichier est pour le développement local uniquement
# 2. Ne jamais commiter le fichier .env avec des vraies valeurs
# 3. Pour la production, utiliser .env.example.production
# ================================================
